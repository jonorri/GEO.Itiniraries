@import 'nib'

@import '../bootstrap/variables'

/* Typography */

/* Containers */
body
	background $gray-lighter
.loading
	position absolute
	top 50%
	left 50%
	width 300px
	margin-left -(@width /2)
section#body
	padding $navbar-height 0 $grid-gutter-width
	background #fff
footer
	padding $grid-gutter-width 0
	color $gray-light
	font-size $font-size-small

/* Alerts */
div.appAlerts
	position: fixed;
	top:20px;
	right:20px;
	z-index: 1200;
	width: 90%;
	max-width: 300px;

/* Forms */
.form-group.multiple
	margin-bottom 0
input, textarea, select
	&.ng-invalid.ng-dirty
		border-color: $state-danger-text;
		box-shadow inset 0 1px 1px rgba(0,0,0,.075);
		&:focus
			border-color: darken(@border-color, 10%);
			box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 6px lighten(@border-color, 20%);

/* Helpers */
.gutter-top
	margin-top ($grid-gutter-width /2)
.gutter-bottom
	margin-bottom ($grid-gutter-width /2)
.ng-cloak
	display none