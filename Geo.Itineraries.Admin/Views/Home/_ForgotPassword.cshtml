<script type="text/ng-template" id="/forgotpassword">
    <div class="container" ng-controller="ForgotPasswordCtrl">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" ng-show="message == null">
                <h2>Forgot Password</h2>
                <form name="forgotPasswordForm" ng-submit="requestReset()">
                    <auto:fields fields="schema" data="user"></auto:fields>
                    <button type="submit" class="btn btn-default btn-lg btn-block" ng-class="{'btn-primary':forgotPasswordForm.$valid}" tabindex="100">Reset Password</button>
                </form>
                <p class="small text-muted gutter-top text-center">Remember your password? <a href="/login">Login Now!</a></p>
            </div>
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" ng-hide="message == null">
                <p class="lead" ng-bind="message"></p>
            </div>
        </div>
    </div>
</script>